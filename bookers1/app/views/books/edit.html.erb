<div>
    <%= flash[:notice] %>
</div>
<% if @book.errors.any? %>
  <span class="error"><%= @book.errors.count %> errors prohibited this book from being saved:</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><span class="error"><%= message %></span></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", "/books" %>

